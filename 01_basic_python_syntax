#four basic components

#variables: placeholders or containers which store information

#assign single information
text = "hello grasshopper python" #black text = can assign anything

#assign multiple information
types_of_information = [1,1.5,"string",True] #list
print types_of_information[0] #extracting one value

#appending at list
blankList = []
blankList.append("Intger") #appending an item to the list
print(blankList)

#conditionals

#loops
types_of_data = []

for i in types_of_information:
    if type(i) is int:
        types_of_data.append(type(i))
    elif type(i) is float:
        types_of_data.append(type(i))
    elif type(i) is str:
        types_of_data.append(type(i))
    elif type(i) is bool:
        types_of_data.append(type(i))
print types_of_data

num = 0
while num < 10:
    num = num + 1
    print num

#functions

#defining function
def addingMachine(num1, num2):
    result = num1 + num2
    return result
addedNum = addingMachine(100,200)
print addedNum
